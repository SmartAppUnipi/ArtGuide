{
  "name": "@smart-apps-unipi/art-ir",
  "version": "1.0.0",
  "description": "Information retrieval module",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/** --ext=ts",
    "lint:fix": "eslint src/** --ext=ts --fix",
    "test": "jest",
    "test:debug": "node --inspect=5859 node_modules/.bin/jest --runInBand --detectOpenHandles",
    "test:watch": "jest --coverage --watch",
    "test:cov": "jest --coverage",
    "test:coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "start": "nodemon src/index.ts",
    "start:debug": "nodemon --inspect=5858 src/index.ts",
    "build": "tsc",
    "watch": "tsc -w -p .",
    "clean": "npx rimraf dist && npx rimraf coverage",
    "docs": "npx typedoc",
    "docs:add": "git add ./docs"
  },
  "keywords": [],
  "authors": [
    {
      "name": "Chiara Baraglia",
      "email": "c.baraglia@studenti.unipi.it"
    },
