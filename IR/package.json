      "url": "giacomodeliberali.com"
    },
    {
      "name": "Haris DukiÄ‡",
      "email": "h.dukic@studenti.unipi.it"
    },
    {
      "name": "Pierpaolo Sepe",
      "email": "p.sepe@studenti.unipi.it"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SmartAppUnipi/ArtGuide/tree/ir"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/jsdom": "^12.2.4",
    "@types/mocha": "^5.2.7",
    "@types/node-fetch": "^2.5.3",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "coveralls": "^3.0.7",
    "eslint": "^6.6.0",
    "eslint-plugin-jsdoc": "^18.0.1",
    "jest": "^24.9.0",
    "nock": "^11.7.0",
    "nodemon": "^1.19.4",
    "pre-commit": "^1.2.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.0",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.15.1",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsdom": "^15.2.1",
    "node-fetch": "^2.6.0",
    "wikidata-sdk": "^7.0.7",
    "wikijs": "^6.0.1",
    "winston": "^3.2.1"
  },
  "jest": {
    "verbose": true,
    "testTimeout": 30000,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "rootDir": "./",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/package.json",
      "/tests",
      "/.vscode/"
    ],
    "coverageDirectory": "coverage"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "execMap": {
      "ts": "node --require ts-node/register"
    }
  },
  "pre-commit": []
}
