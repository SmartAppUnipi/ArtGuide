{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "inlineSourceMap": true,
      "inlineSources": true,
      "outDir": "dist",
      "baseUrl": ".",
      "types": [
        "@types/jest",
        "@types/supertest",
        "@types/express"
      ]
  },
  "include": [
      "src/**/*"
  ]
}